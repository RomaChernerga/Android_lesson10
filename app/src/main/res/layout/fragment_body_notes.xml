<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back_note"
    android:clickable="true"
    tools:context=".BodyNotesFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>


    <TextView
        android:id="@+id/note_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/body_note_margin_left"
        android:layout_marginRight="10dp"
        android:layout_marginTop="45dp"
        android:background="@android:color/transparent" />
    <TextView
        android:id="@+id/note_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/body_note_margin_left"
        android:layout_marginRight="@dimen/body_note_margin_right"
        android:layout_marginTop="45dp"
        android:background="@android:color/transparent" />


    <EditText
        android:id="@+id/body_note"
        android:gravity="start"
        android:layout_marginLeft="@dimen/body_note_margin_left"
        android:layout_marginRight="@dimen/body_note_margin_right"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="200dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout

        android:layout_marginTop="460dp"
        android:layout_marginLeft="@dimen/body_note_margin_left"
        android:layout_marginRight="@dimen/body_note_margin_right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/text_clear"
            android:lines="3"
            android:backgroundTint="@android:color/transparent"
            android:alpha="1"
            android:shadowColor="@color/black"
            android:shadowRadius="5"
            app:cornerRadius="@dimen/button_radius"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="Clear"
            android:textSize="@dimen/button_text_size" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/note_checkDate"
            android:backgroundTint="@android:color/transparent"
            android:alpha="1"
            android:shadowColor="@color/black"
            android:shadowRadius="5"
            app:cornerRadius="@dimen/button_radius"
            android:textSize="@dimen/button_text_size"
            android:text="Add a date"
            android:layout_margin="2dp"
            android:layout_weight="1.3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/note_save"
            android:backgroundTint="@android:color/transparent"
            android:alpha="1"
            android:shadowColor="@color/black"
            android:shadowRadius="5"
            app:cornerRadius="@dimen/button_radius"
            android:textSize="@dimen/button_text_size"
            android:layout_margin="2dp"
            android:text="Save"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="520dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/body_note_margin_left"
        android:layout_marginRight="@dimen/body_note_margin_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_exit"
            android:lines="3"
            android:backgroundTint="@android:color/transparent"
            android:alpha="1"
            android:shadowColor="@color/black"
            android:shadowRadius="5"
            app:cornerRadius="@dimen/button_radius"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="Выход"
            android:textSize="@dimen/button_text_size" />

    </LinearLayout>

</FrameLayout>